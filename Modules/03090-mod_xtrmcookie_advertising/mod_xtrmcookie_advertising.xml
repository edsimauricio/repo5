	<!-- Main File Copy -->
	<files>
		<filename module="mod_xtrmcookie_advertising">mod_xtrmcookie_advertising.php</filename>
        <filename>mod_xtrmcookie_advertising.xml</filename>
	</files>	
	
	<!-- Language File Copy -->
	<languages>
